@model TaskManagementSystem.Models.Task



<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<ul class="list-group">
    <li class="list-group-item">Task Name: @Model.TaskName</li>
    <li class="list-group-item">Task Description: @Model.TaskDetails</li>

    <li class="list-group-item">CreatedDate: @Model.CreatedDate</li>
    <li class="list-group-item">AssignedDate: @Model.AssignedDate</li>
    <li class="list-group-item">DueDate: @Model.DueDate</li>
    <li class="list-group-item">AssignedBy: @Model.AssignedBy.UserName</li>
    @*<li class="list-group-item">AssignedTo : @Model.AssignedTo</li>*@
    <li class="list-group-item">TaskCategory: @Model.TaskCategory.Name</li>
    <li class="list-group-item">TaskStatus: @Model.TaskStatus</li>
    <li class="list-group-item">TaskCompletedDate: @Model.TaskCompletedDate</li>
</ul>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="ViewTask">Back to List</a>
</form>

